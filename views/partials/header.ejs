<header>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<link href="https://cdn.datatables.net/v/bs4/dt-1.13.8/datatables.min.css" rel="stylesheet">
	

	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

	
	
	<nav class="navbar navbar-expand-sm navbar-light p-0 h-100">
		<div class="container-fluid">
			<a class="navbar-brand ps-2" >
				
			
				<a href="/">
					<img src="/assets/images/logo3.png" style="height:10vh;" alt="...">
				  </a>
				  
				
			</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
				aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span><i class="fas fa-bars text-white"></i></span>
			</button>
			<div class="collapse navbar-collapse ps-2" id="navbarSupportedContent" style="z-index: 100;">
				<ul class="navbar-nav ms-auto me-3">
					<li class="nav-item"><a class="nav-link" style="width:10vw; font-size:larger" href="/home/about-us">Who Are We?</a></li>
					<li class="nav-item"><a class="nav-link" style="width:10vw; font-size:larger" href="/home/mission">Why Donate?</a></li>
					<li class="nav-item"><a class="nav-link" style="width:10vw; font-size:larger"href="/home/contact-us">Contact Us</a></li>
					<li class="nav-item"><a class="nav-link" style="width:10vw; font-size:larger"href="/home/faq">FAQ</a></li>
					<% if(currentUser) { %>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle user-icon" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							  <%= currentUser.firstName[0] %>
							</a>
							<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
							  <% if(currentUser.role === 'agent') { %>
								<a class="dropdown-item" href="/agent/dashboard">Dashboard</a>
								<div class="dropdown-divider"></div>
							  	<a class="dropdown-item" href="/agent/profile">Profile</a>
							  <% } else if(currentUser.role === 'donor') { %>
								<a class="dropdown-item" href="/donor/dashboard">Dashboard</a>
								<div class="dropdown-divider"></div>
							  	<a class="dropdown-item" href="/donor/profile">Profile</a>
							  <% } %>

							  <!-- Add other sidebar options here -->
							  
							  <div class="dropdown-divider"></div>
							  <a class="dropdown-item" href="/auth/logout">Logout</a>
							</div>
						</li>
					<% } else { %>
						<li class="nav-item"><a class="nav-link" style="width:8vw; font-size:larger" href="/auth/login">Login</a></li>
						<li class="nav-item"><a class="nav-link" style="width:8vw; font-size:larger" href="/auth/signup">Sign up</a></li>
					<% } %>
				</ul>
			</div>
		</div>
	</nav>
</header>