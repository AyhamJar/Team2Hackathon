<main>
	<%- include('../partials/agentSidebar') %>
    
	<div id="main-wrapper">
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead>
                        <tr class="table-dark">
                        
                            <th scope="col">#</th>
                            <th scope="col">Donor name</th>
                            <th scope="col">Address collected</th>
                            <th scope="col">Item collected</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i<previousCollections.length; i++) { %>
                            <tr>
                                <th scope="row"> <%= i+1 %> </th>
                                <td> <%= previousCollections[i].donor.firstName + " " + previousCollections[i].donor.lastName %> </td>
                                <td> <%= previousCollections[i].address %> </td>
                                <td> <%= previousCollections[i].foodType %> </td>
                                <td> <%= previousCollections[i].phone %> </td>
                                <td><a href="/agent/collection/view/<%= previousCollections[i]._id %>" class="btn">View</a></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
</main>
<%- include('../partials/footer') %>